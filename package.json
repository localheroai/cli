{
  "name": "@localheroai/cli",
  "version": "0.0.18",
  "description": "CLI tool for managing translations with LocalHero.ai",
  "homepage": "https://localhero.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/localheroai/cli"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "localheroai": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "start": "node dist/cli.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "postinstall": "chmod +x dist/cli.js",
    "build:run": "npm run build && npm start"
  },
  "keywords": [
    "i18n",
    "translation",
    "cli",
    "localization",
    "localhero.ai"
  ],
  "author": "LocalHero.ai",
  "license": "MIT",
  "dependencies": {
    "@oclif/core": "^3.27.0",
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "gettext-parser": "^8.0.0",
    "glob": "^10.4.5",
    "inquirer": "^12.9.6",
    "nanoid": "^5.1.5",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.36.0",
    "@inquirer/testing": "^2.1.50",
    "@jest/globals": "^29.7.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.6",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@typescript-eslint/typescript-estree": "^8.30.1",
    "eslint": "^8.57.1",
    "globals": "^15.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README",
    "LICENSE"
  ]
}
