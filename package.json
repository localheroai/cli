{
  "name": "@localheroai/cli",
  "version": "0.0.17",
  "description": "CLI tool for managing translations with LocalHero.ai",
  "homepage": "https://localhero.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/localheroai/cli"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "localheroai": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "start": "node dist/cli.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "postinstall": "chmod +x dist/cli.js",
    "build:run": "npm run build && npm start"
  },
  "keywords": [
    "i18n",
    "translation",
    "cli",
    "localization",
    "localhero.ai"
  ],
  "author": "LocalHero.ai",
  "license": "MIT",
  "dependencies": {
    "@oclif/core": "^3.25.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "gettext-parser": "^8.0.0",
    "glob": "^10.3.10",
    "inquirer": "^12.0.1",
    "nanoid": "^5.1.5",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@eslint/js": "^9.24.0",
    "@inquirer/testing": "^2.1.36",
    "@jest/globals": "^29.7.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@typescript-eslint/typescript-estree": "^8.30.1",
    "eslint": "^8.57.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README",
    "LICENSE"
  ]
}
