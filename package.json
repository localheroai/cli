{
  "name": "@localheroai/cli",
  "version": "0.0.3",
  "description": "CLI tool for managing translations with LocalHero.ai",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "localheroai": "./src/cli.js"
  },
  "scripts": {
    "start": "node src/cli.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint .",
    "postinstall": "chmod +x src/cli.js"
  },
  "keywords": [
    "i18n",
    "translation",
    "cli",
    "localization"
  ],
  "author": "LocalHero.ai",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "inquirer": "^12.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@inquirer/testing": "^2.1.36",
    "@jest/globals": "^29.7.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testEnvironmentOptions": {
      "extensionsToTreatAsEsm": [
        ".js"
      ]
    }
  }
}